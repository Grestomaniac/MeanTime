<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <merge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <ImageView
            android:id="@+id/arrowDown"
            style="@style/ItemButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@+id/picker"
            app:layout_constraintStart_toStartOf="@+id/picker"
            app:layout_constraintTop_toBottomOf="@+id/picker"
            app:srcCompat="@drawable/ic_arrow_down"/>

        <ImageView
            android:id="@+id/arrowUp"
            style="@style/ItemButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@+id/picker"
            app:layout_constraintStart_toStartOf="@+id/picker"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_up" />

        <EditText
            android:id="@+id/picker"

            style="@style/TimePickerStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/item_time_picker"

            app:layout_constraintStart_toStartOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/arrowUp"
            android:imeOptions="actionNext"
            tools:text="00" />

    </merge>

</layout>