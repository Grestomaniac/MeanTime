<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <merge
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <ImageView
            android:id="@+id/arrowDown"
            style="@style/ItemButtonStyle"
            android:layout_width="0dp"
            android:layout_height="32dp"

            app:layout_constraintEnd_toEndOf="@+id/picker"
            app:layout_constraintStart_toStartOf="@+id/picker"
            app:layout_constraintTop_toBottomOf="@+id/picker"
            app:srcCompat="@drawable/ic_arrow_down"/>

        <ImageView
            android:id="@+id/arrowUp"
            style="@style/ItemButtonStyle"
            android:layout_width="0dp"
            android:layout_height="32dp"

            app:layout_constraintEnd_toEndOf="@+id/picker"
            app:layout_constraintStart_toStartOf="@+id/picker"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_up" />

        <EditText
            android:id="@+id/picker"
            android:layout_width="120dp"
            android:layout_height="83dp"

            android:background="@drawable/base_item"

            android:fontFamily="@string/font_family_regular"
            android:gravity="center"
            android:textSize="52sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrowUp"
            tools:text="00"
            android:selectAllOnFocus="true"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@string/font_family_light"
            android:textSize="16sp"
            android:textColor="@color/iconColor"

            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/arrowDown"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="M" />

    </merge>

</layout>