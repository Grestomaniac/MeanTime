<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="task"
            type="com.sillyapps.meantime.data.Task"/>

        <variable
            name="viewModel"
            type="com.sillyapps.meantime.ui.mainscreen.MainViewModel"/>

        <import type="android.view.View"/>
        <import type="com.sillyapps.meantime.data.State"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:stateListAnimator="@animator/item_raise"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/item_waiting"
            android:elevation="4dp"

            android:paddingBottom="@dimen/iconPadding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/leftInfoBar"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/enter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/iconPadding"
                android:layout_marginEnd="16dp"
                android:text="@{task.name}"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Таск с очень и очень длинным названием" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"

                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginStart="16dp"

                android:layout_marginTop="8dp"

                android:layout_marginEnd="16dp"
                android:max="100"
                android:progress="@{task.relativeProgress}"
                android:progressDrawable="@drawable/progress_bar_state_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_name"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/progress"
                style="@style/TinyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="@+id/progressBar"
                app:layout_constraintTop_toBottomOf="@id/progressBar"
                app:timeWithSeconds="@{task.progress}"
                tools:text="00:00:00"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/timeRemained"
                style="@style/TinyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@+id/progress"
                app:layout_constraintEnd_toEndOf="@+id/progressBar"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:timeWithSeconds="@{task.taskTimeRemained}"
                tools:text="00:00:00"
                android:visibility="visible"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/progress"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/button_add"
                    style="@style/ActionButtonStyle"

                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"

                    android:background="@drawable/item_waiting"

                    android:elevation="@dimen/actionButtonElevation"
                    android:onClick="@{() -> viewModel.stopButtonPressed()}"
                    android:src="@drawable/ic_fast_backward"
                    app:layout_constraintBottom_toBottomOf="@+id/play_button"
                    app:layout_constraintEnd_toStartOf="@+id/button_stop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/play_button" />

                <ImageButton
                    android:id="@+id/button_stop"
                    style="@style/ActionButtonStyle"

                    android:layout_width="@dimen/centralButtonSize"

                    android:layout_height="@dimen/centralButtonSize"

                    android:background="@drawable/item_waiting"

                    android:elevation="@dimen/actionButtonElevation"
                    android:onClick="@{() -> viewModel.stopButtonPressed()}"
                    android:src="@drawable/ic_stop_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/play_button"
                    app:layout_constraintEnd_toStartOf="@+id/play_button"
                    app:layout_constraintStart_toEndOf="@+id/button_add"
                    app:layout_constraintTop_toTopOf="@+id/play_button" />

                <ImageButton
                    android:id="@+id/play_button"
                    style="@style/ActionButtonStyle"

                    android:layout_width="@dimen/centralButtonSize"

                    android:layout_height="@dimen/centralButtonSize"

                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/item_waiting"
                    android:elevation="@dimen/actionButtonElevation"
                    android:onClick="@{() -> viewModel.startOrPauseButtonPressed()}"
                    app:isDayRunning="@{viewModel.uiDayState == State.ACTIVE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_take"
                    app:layout_constraintStart_toEndOf="@+id/button_stop"
                    app:layout_constraintTop_toTopOf="parent"

                    tools:src="@drawable/ic_play" />

                <ImageButton
                    android:id="@+id/button_take"
                    style="@style/ActionButtonStyle"

                    android:layout_width="@dimen/buttonSize"
                    android:layout_height="@dimen/buttonSize"

                    android:background="@drawable/item_waiting"

                    android:elevation="@dimen/actionButtonElevation"
                    android:onClick="@{() -> viewModel.stopButtonPressed()}"
                    android:src="@drawable/ic_fast_forward"
                    app:layout_constraintBottom_toBottomOf="@+id/play_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/play_button"
                    app:layout_constraintTop_toTopOf="@+id/play_button" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/taskIcon"
            style="@style/ItemButtonStyle"
            android:layout_width="@dimen/iconSize"

            android:layout_height="@dimen/iconSize"
            android:layout_marginStart="8dp"
            android:elevation="4dp"
            android:padding="6dp"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_reorder"
            android:background="@drawable/circle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/leftInfoBar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/left_info_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/time"
                style="@style/TimeItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"

                android:textColor="@color/secondaryTextColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:time="@{task.startTime}"
                tools:text="17:00" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>