<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="task"
            type="com.sillyapps.meantime.data.Task" />
    </data>

    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

        <TextView
            android:id="@+id/enter_duration"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:text="@string/enter_duration"
            app:layout_constraintEnd_toStartOf="@+id/uncertain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"/>

        <CheckBox
            android:id="@+id/uncertain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={task.uncertain}"

            android:text="@string/duration_is_uncertain"
            app:layout_constraintBottom_toBottomOf="@+id/enter_duration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/enter_duration"
            app:layout_constraintTop_toTopOf="@+id/enter_duration" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timePickerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:interactive="@{!task.uncertain}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_duration">

            <EditText
                android:id="@+id/timePickerHours"

                style="@style/TimePickerStyle"
                android:background="@drawable/item_time_picker"
                tools:text="00"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/timePickerMinutes"
                app:layout_constraintEnd_toStartOf="@+id/colon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/timePickerMinutes"
                app:layout_constraintHorizontal_chainStyle="packed"/>

            <TextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:text="@string/colon"
                android:textSize="60sp"
                app:layout_constraintBottom_toBottomOf="@+id/timePickerHours"
                app:layout_constraintEnd_toStartOf="@+id/timePickerMinutes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/timePickerHours"
                app:layout_constraintTop_toTopOf="@+id/timePickerHours" />

            <EditText
                android:id="@+id/timePickerMinutes"

                style="@style/TimePickerStyle"
                android:background="@drawable/item_time_picker"
                tools:text="00"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="4dp"

                app:layout_constraintEnd_toStartOf="@+id/colon2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/colon2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:layout_marginEnd="8dp"
                android:text="@string/colon"
                android:textSize="60sp"
                app:layout_constraintBottom_toBottomOf="@+id/timePickerHours"
                app:layout_constraintEnd_toStartOf="@+id/picker"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/timePickerMinutes"
                app:layout_constraintTop_toTopOf="@+id/timePickerHours" />

            <EditText
                android:id="@+id/picker"

                style="@style/TimePickerStyle"
                android:background="@drawable/item_time_picker"
                tools:text="00"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@+id/timePickerMinutes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/colon2"
                app:layout_constraintTop_toTopOf="@+id/timePickerMinutes" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </merge>

</layout>