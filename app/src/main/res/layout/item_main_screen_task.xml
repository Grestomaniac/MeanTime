<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="task"
            type="com.sillyapps.meantime.data.Task"/>

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"

        android:elevation="@dimen/listItemElevation"
        android:stateListAnimator="@animator/item_raise">

        <ImageView
            android:id="@+id/taskIcon"
            style="@style/ItemButtonStyle"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"

            android:background="@drawable/circle"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/taskLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/taskLayout"
            app:srcCompat="@drawable/ic_reorder" />

        <View
            android:id="@+id/mainConnector"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/primaryDarkColor"
            app:layout_constraintBottom_toBottomOf="@+id/taskIcon"
            app:layout_constraintEnd_toStartOf="@+id/taskLayout"
            app:layout_constraintStart_toEndOf="@+id/taskIcon"
            app:layout_constraintTop_toTopOf="@+id/taskIcon" />

        <View
            android:id="@+id/prevTaskConnector"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/primaryDarkColor"
            app:layout_constraintBottom_toTopOf="@+id/taskIcon"
            app:layout_constraintEnd_toEndOf="@+id/taskIcon"
            app:layout_constraintStart_toStartOf="@+id/taskIcon"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{task.hasPrevTask ? View.VISIBLE : View.INVISIBLE}"/>

        <View
            android:id="@+id/nextTaskConnector"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/primaryDarkColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/taskIcon"
            app:layout_constraintStart_toStartOf="@+id/taskIcon"
            app:layout_constraintTop_toBottomOf="@+id/taskIcon"

            android:visibility="@{task.hasNextTask ? View.VISIBLE : View.INVISIBLE}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/taskLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/taskIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:state="@{task.state}"
            tools:background="@drawable/item_waiting"

            android:paddingBottom="16dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/time"
                style="@style/TimeItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/enter_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/enter_name"
                app:time="@{task.startTime}"
                tools:text="17:00" />

            <TextView
                android:id="@+id/enter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@{task.name}"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/time"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Таск с очень и очень длинным названием" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:max="100"
                android:progress="@{task.relativeProgress}"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_name" />

            <TextView
                android:id="@+id/progress"
                style="@style/TinyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/progressBar"

                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:timeWithSeconds="@{task.progress}"
                tools:text="00:00:00" />

            <TextView
                android:id="@+id/timeRemained"
                style="@style/TinyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintEnd_toEndOf="@+id/progressBar"
                app:layout_constraintTop_toBottomOf="@+id/progressBar"
                app:timeWithSeconds="@{task.taskTimeRemained}"
                tools:text="00:00:00" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>