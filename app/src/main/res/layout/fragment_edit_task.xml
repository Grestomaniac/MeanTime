<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.sillyapps.meantime.ui.edittemplatescreen.EditTemplateViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_screen"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/enter_name"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"

                android:layout_marginEnd="8dp"
                android:text="@string/enter_name"
                app:layout_constraintBottom_toBottomOf="@+id/name"
                app:layout_constraintEnd_toStartOf="@+id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/name" />

            <EditText
                android:id="@+id/name"
                style="@style/AppTheme"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@={viewModel.task.name}"

                android:layout_marginEnd="16dp"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/enter_name"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/enter_duration"
                style="@style/AppTheme"
                android:layout_width="wrap_content"
                android:layout_height="0dp"

                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/enter_duration"
                app:layout_constraintBottom_toBottomOf="@+id/duration"
                app:layout_constraintEnd_toStartOf="@+id/duration"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/duration" />

            <TextView
                android:id="@+id/duration"
                style="@style/AppTheme"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/enter_duration"
                app:layout_constraintTop_toBottomOf="@+id/name"

                app:timeWithSeconds="@{viewModel.task.duration}"
                tools:text="00:00:00"/>

            <TextView
                android:id="@+id/enter_melody"
                style="@style/AppTheme"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/melody"
                app:layout_constraintBottom_toBottomOf="@+id/melody"
                app:layout_constraintEnd_toStartOf="@+id/melody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/melody" />

            <TextView
                android:id="@+id/melody"
                style="@style/AppTheme"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/enter_melody"
                app:layout_constraintTop_toBottomOf="@+id/melody_on"
                tools:text="Dean Town" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibration_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/vibration_on"
                android:checked="@={viewModel.task.vibrationOn}"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/melody_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/melody_on"
                android:checked="@={viewModel.task.soundOn}"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vibration_on" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ok_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_check"
            app:fabSize="normal"
            android:layout_gravity="bottom|end" />

    </FrameLayout>

</layout>