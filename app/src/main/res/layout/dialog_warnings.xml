<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="appWarnings"
            type="com.sillyapps.meantime.data.AppPermissionWarnings" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"

        android:background="@drawable/dialog">

        <TextView
            android:id="@+id/warningHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/warnings"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            style="@style/TinyTextStyle"
            android:text="@string/warning_dialog_description"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/warningHeader" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/batteryOptimizationLayout"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            android:padding="8dp"

            android:background="@drawable/item_waiting">


            <ImageView
                android:id="@+id/batteryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/batteryText"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/batteryText"
                app:srcCompat="@drawable/ic_battery"
                app:warningColor="@{appWarnings.batteryWarningColor}"
                tools:tint="@color/colorWarning" />

            <TextView
                android:id="@+id/batteryText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{appWarnings.batteryStringResource}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/batteryImage"

                app:layout_constraintTop_toTopOf="parent"
                app:warningColor="@{appWarnings.batteryWarningColor}"
                tools:text="@string/battery_optimization_on"
                tools:textColor="@color/colorWarning"

                style="@style/TinyTextStyle"/>

            <TextView
                android:id="@+id/batteryWarningDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/battery_optimization_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/batteryText"
                style="@style/TinyTextStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notificationLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batteryOptimizationLayout"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"

            android:padding="8dp"
            android:background="@drawable/item_waiting">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/notificationText"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="@+id/notificationText"
                app:srcCompat="@drawable/ic_notification"
                app:warningColor="@{appWarnings.notificationWarningColor}"
                tools:tint="@color/colorWarning" />

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{appWarnings.notificationStringResource}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/notificationImage"

                app:layout_constraintTop_toTopOf="parent"
                app:warningColor="@{appWarnings.notificationWarningColor}"
                tools:text="@string/notifications_off"
                tools:textColor="@color/colorWarning"
                style="@style/TinyTextStyle"/>

            <TextView
                android:id="@+id/notificationWarningDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/notifications_description"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notificationText"
                style="@style/TinyTextStyle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>