<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.sillyapps.meantime.ui.alarmscreen.AlarmViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/AppTheme">

        <TextView
            android:id="@+id/completedTaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:text="@{viewmodel.completedTask.name}"
            tools:text="Task 1"/>

        <TextView
            android:id="@+id/completedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/completed"
            app:layout_constraintEnd_toEndOf="@+id/completedTaskName"
            app:layout_constraintStart_toStartOf="@+id/completedTaskName"
            app:layout_constraintTop_toBottomOf="@+id/completedTaskName" />

        <ImageButton
            android:id="@+id/bigAssButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/nextTaskInfoLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/completedTextView"
            app:srcCompat="@drawable/ic_check" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dayCompletedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/endDayButton"
            app:layout_constraintStart_toStartOf="parent"

            android:visibility="@{viewmodel.dayEnded ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <TextView
                android:id="@+id/dayEndedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day_ended"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nextTaskInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/endDayButton"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="@{viewmodel.dayEnded ? View.GONE : View.VISIBLE}">

            <TextView
                android:id="@+id/nextTaskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"

                app:layout_constraintEnd_toEndOf="@+id/nextTaskTextView"
                app:layout_constraintStart_toStartOf="@+id/nextTaskTextView"
                app:layout_constraintTop_toBottomOf="@+id/nextTaskTextView"
                android:text="@{viewmodel.nextTaskName}"
                tools:text="Task 2" />

            <TextView
                android:id="@+id/nextTaskTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_task"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/endDayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/end_day"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>