<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/completedColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="colorSurface">@color/primaryColor</item>

        <item name="icdStyle">@style/CustomIconDialogStyle</item>
    </style>

    <style name="CustomIconDialogStyle" parent="IcdStyle">
        <item name="icdIconColor">@color/primaryTextColor</item>
        <item name="icdSearchIconStyle">@style/CustomIcdSearchIconStyle</item>
        <item name="icdCancelSearchIconStyle">@style/CustomIcdCancelSearchIconStyle</item>
    </style>

    <style name="CustomIcdSearchIconStyle" parent="IcdSearchIconStyle">
        <item name="tint">@color/disabledColor</item>
    </style>

    <style name="CustomIcdCancelSearchIconStyle" parent="IcdCancelSearchIconStyle">
        <item name="tint">@color/disabledColor</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation">@dimen/actionBarElevation</item>
    </style>

    <style name="DescriptionStyle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@string/font_family_light</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    
    <style name="TimeItemStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Header" parent="AppTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="ButtonTextStyle" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TinyTextStyle" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@string/font_family_light</item>
    </style>

    <style name="LabelTextStyle" parent="TinyTextStyle">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="TimeTextStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="InputTextStyle" parent="AppTheme">
        <item name="android:gravity">top|start</item>
    </style>

    <style name="TimePickerStyle" parent="AppTheme">
        <item name="android:inputType">time</item>
        <item name="android:textSize">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>

        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@string/font_family_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProgressBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ItemButtonStyle" parent="AppTheme">
        <item name="tint">@color/primaryTextColor</item>
        <item name="tintMode">src_atop</item>
    </style>

    <style name="ActionButtonStyle" parent="AppTheme">
        <item name="tint">@color/secondaryTextColor</item>
        <item name="tintMode">src_atop</item>
        <item name="elevation">6dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>