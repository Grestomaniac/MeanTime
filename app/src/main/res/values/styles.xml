<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="fontFamily">@font/coiny</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    
    <style name="TimeItemStyle" parent="AppTheme">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TinyTextStyle" parent="AppTheme">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InputTextStyle" parent="AppTheme">
        <item name="android:gravity">top|start</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">@dimen/button_padding</item>
        <item name="android:paddingEnd">@dimen/button_padding</item>
    </style>

    <style name="ActionButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/action_button</item>
        <item name="tint">@color/secondaryTextColor</item>
        <item name="tintMode">src_atop</item>
    </style>

    <style name="WarningStyle" parent="AppTheme">
        <item name="color">@color/colorWarning</item>
        <item name="tint">@color/colorWarning</item>
    </style>

    <style name="AlrightStyle" parent="AppTheme">
        <item name="color">@color/colorAlright</item>
        <item name="tint">@color/colorAlright</item>
    </style>

</resources>